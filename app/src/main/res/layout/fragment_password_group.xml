<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:gravity="bottom"
        android:paddingBottom="6dp"
        android:text="@string/password_group_title"
        android:textColor="#999999"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#494949" />

    <ListView
        android:id="@+id/fragment_password_group_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@drawable/selecter_item_group" />

    <RelativeLayout
        android:id="@+id/fragment_password_group_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selecter_item_group"
        android:clickable="true" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#494949" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_action_group_add"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/password_group_add"
            android:textColor="#EEEEEE"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>